    "def check_number(number):\n",
    "    if number == 0:\n",
    "        return \"Zero\"\n",
    "    elif number % 2 == 0:\n",
    "        return \"Even\"\n",
    "    else:\n",
    "        return \"Odd\"\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    user_input = int(input(\"Enter a number: \"))\n",
    "    \n",
    "    result = check_number(user_input)\n",
